<% if (user_signed_in? && user_admin?) %>
<%= form_for(@news) do |f| %>
<div class="main-content main-form">
  <% if @news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% @news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="pane">
      <h3 class="fat"><%= yield(:title) %></h3>

      <div class="row">
        <div class="col-sm-7">
          <%= f.label :title, "Titel" %><br>
          <%= f.text_field :title, :placeholder => 'Titel pÃ¥ nyheten' %>
        </div>
       </div>
    </div>
    <div class="row">
      <div class="pane">
        <div class="field">
          <%= f.label :text, "Text" %><br>
          <%= f.text_area :body, :rows => 10, :placeholder => 'Vad ska din nyhet handla om?' %>
        </div>
        <div class="field">
        <br>
        <%= f.label 'Publicera' %><br>
        <%= f.check_box :published %>
        </div>
      </div>
    </div>
    <div class="pane">
      <%= render 'layouts/markdown' %>
    </div>


</div>
  <div class="sidebar sidebar-form">
    <div class="pane">
      <h4 class="fat">Spara</h4>
      <p>
        <%= f.submit 'Spara nyhet' %>
      </p>

    </div>
  </div>

  
<% end %>
<% end %>