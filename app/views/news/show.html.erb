<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @news.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @news.body %>
</p>

<p>
  <strong>Published at:</strong>
  <%= @news.updated_at %>
</p>

<% if User.find(@news.user_id) %>
<p>
  <strong>User:</strong>
  <%= User.find(@news.user_id).name %>
</p>
<% end %>


<%= link_to 'Edit', edit_news_path(@news) %> |
<%= link_to 'Back', news_index_path %>
