<h1>Listing news</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Published</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <% t = Time.zone.parse(news.created_at.strftime("%Y-%m-%d %H:%M")) %>
        <td><%= news.title %></td>
        <td><%= news.body %></td>
        <td><%= distance_of_time_in_words_to_now(t) %></td>
        <td><%= User.find(news.user_id).name %></td>
        <td><%= link_to 'Visa', news %></td>
        <td><%= link_to 'Redigera', edit_news_path(news) %></td>
        <td><%= link_to 'Ta bort', news, method: :delete, data: { confirm: 'Är du säker?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

