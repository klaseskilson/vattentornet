<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Vattentornet - <%= yield(:title) %><%=  "Studentens andra hem" if yield(:title).blank? %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= tag 'meta', name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.png' %>
</head>
<body class="<%= controller.controller_name %> <%= yield(:body_class) %>" ng-app="pubApp">
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.0";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<%= render 'layouts/header' %>

<% flash.each do |key, value| %>
    <%= content_tag :section, value, class: "container notices #{key}" %>
<% end %>

<%= yield %>

<%= render 'layouts/footer' %>

</body>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
  ga('create', 'UA-55328855-1', 'auto');
  ga('send', 'pageview');
</script>
</html>
