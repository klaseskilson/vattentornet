<div class="container">
  <div class="row">
    <div class="main-content wide">
      <div class="pane">
        <h2>
          Drycker
          <% if user_signed_in_and_admin? %>
            <%= link_to 'Lägg till ny', new_drink_path %>
          <% end %>
        </h2>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Namn</th>
              <th>Bryggeri</th>
              <th>Land</th>
              <th>Procentsats</th>
              <th>Pris</th>
              <th>Typ av dryck</th>
              <th>Beskrivning</th>
              <th>I lager</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @drinks.each do |drink| %>
              <tr>
                <td><%= drink.name %></td>
                <td><%= drink.brewery %></td>
                <td><%= drink.country %></td>
                <td><%= drink.percentage %></td>
                <td><%= drink.price %></td>
                <td><%= drink.drink_type.name %></td>
                <td><%= drink.description %></td>
                <td><%= drink.instock %></td>
                <td><%= link_to 'Visa', drink %></td>
                <% if user_signed_in_and_admin? %>
                  <td><%= link_to 'Redigera', edit_drink_path(drink) %></td>
                  <td><%= link_to 'Ta bort', drink, method: :delete, data: { confirm: 'Är du säker på att du vill ta bort denna dryck?' } %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>
