<h1>Listing drinks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brewery</th>
      <th>Country</th>
      <th>Percentage</th>
      <th>Price</th>
      <th>Drinktype</th>
      <th>In Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drinks.each do |drink| %>
      <tr>
        <td><%= drink.name %></td>
        <td><%= drink.brewery %></td>
        <td><%= drink.country %></td>
        <td><%= drink.percentage %></td>
        <td><%= drink.price %></td>
        <td><%= drink.DrinkType %></td>
        <td><%= drink.instock %></td>
        <td><%= link_to 'Show', drink %></td>
        <td><%= link_to 'Edit', edit_drink_path(drink) %></td>
        <td><%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

