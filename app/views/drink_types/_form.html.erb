<%= form_for(@drink_type) do |f| %>
  <div class="main-content main-form">
    <% if @drink_type.errors.any? %>
      <div class="pane" id="error_explanation">
        <h2><%= pluralize(@drink_type.errors.count, "error") %> prohibited this drink_type from being saved:</h2>

        <ul>
        <% @drink_type.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="pane">
      <h3 class="fat"><%= yield(:title) %></h3>

      <div class="row">
        <div class="col-sm-6">
          <%= f.label :name, "Namn" %><br>
          <%= f.text_field :name, placeholder: "Tex IPA, Lager, Rött vin, Whisky..." %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <%= f.label :description, "Beskrivning" %><br>
          <%= f.text_area :description, placeholder: "En DIPA är tokgod, Vitt vin är friskt, osv.", rows: 6 %>
        </div>
      </div>
    </div>
    </div>
  </div>
  <div class="sidebar sidebar-form">
    <div class="pane">
      <h4 class="fat">Spara</h4>
      <p>
        <%= f.submit %>
      </p>
      <p>
        <%= link_to 'Gå till dryckestyp', stock_path(@drink_type) if @drink_type.persisted? %>
      </p>
    </div>
  </div>
<% end %>
