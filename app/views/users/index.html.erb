<div class="container">
  <div class="row">
    <div class="main-content wide">
      <div class="pane">
        <h1>Samtliga användare</h1>
        <p>
          <%= link_to "Ny användare", new_user_registration_path %>
        </p>
      </div>
      <div class="pane">
        <table class="table">
          <thead>
            <tr>
              <th>Namn</th>
              <th class="hidden-xs">email</th>
              <th colspan="2" class="hidden-xs"></th>
              <th colspan="1" class="visible-xs"></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= user.name %>
                  <%= icon 'flag', 'Admin' if user.admin? %>
                </td>
                <td class="hidden-xs"><%= user.email %></td>
                <td><%= link_to 'Redigera', edit_user_path(user) %></td>
                <td class="hidden-xs"><%= link_to 'Ta bort', user_path(user), data: { confirm: "Är du säker? Detta går verkligen inte att ångra!" }, method: :delete %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
