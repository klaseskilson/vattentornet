<h2>Redigera <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label :name, "Namn" %><br/>
    <%= f.text_field :name %>
  </div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password, "Lösenord" %> <i>(Lämna tomt om du inte vill ändra)</i><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation, "Bekräfta lösenord" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.label :current_password, "Nuvarande lösenord" %> <i>(Vi behöver ditt nuvarande lösenord för att bekräfta ändringarna)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %></div>

  <% if resource.admin? %>
    <div>
      <%= f.label :admin %><br/>
      <%= f.check_box :admin %>
    </div>
  <% end %>

  <div><%= f.submit "Uppdatera" %></div>
<% end %>

<% if resource.admin? %>

<h3>Ta bort konto</h3>

<p><%= button_to "Ta bort konto", registration_path(resource_name), data: { confirm: "Är du säker?" }, method: :delete %></p>

<% end %>
<%= link_to "Tillbaka", :back %>
